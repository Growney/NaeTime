<div class="d-flex justify-content-end">
    <Button @onclick="ToggleMute" Class="rounded-0 rounded-start" Color="ButtonColor.Secondary" Style="width:50px">
        @if (_isMuted)
        {
            <i class="fa-solid fa-volume-xmark"></i>
        }
        else
        {
            if (_volume == 0)
            {
                <i class="fa-solid fa-volume-off"></i>
            }
            else if (_volume < 50)
            {
                <i class="fa-solid fa-volume-low"></i>
            }
            else
            {
                <i class="fa-solid fa-volume-high"></i>
            }
        }
    </Button>
    <Dropdown @onclick:preventDefault>
        <DropdownToggleButton Class="px-1 rounded-0 rounded-end" Color="ButtonColor.Secondary"></DropdownToggleButton>
        <DropdownMenu Position="DropdownMenuPosition.Start">
            <RangeInput TValue=int Value="_volume" ValueExpression="() => _volume" ValueChanged="VolumeChange" Max="100" Min="0">
            </RangeInput>
        </DropdownMenu>
    </Dropdown>
</div>

