<h5 class="w-100 text-center">Fastest Single Lap</h5>
<table class="table table-striped">
    <tr class="px-2">
        <th>
            #
        </th>
        <th>
            Pilot
        </th>
        <th class="text-center">
            Time
        </th>
    </tr>
    <tbody>
        @foreach (var position in _positions.OrderBy(x => x.Position))
        {
            <tr>
                <td>
                    @position.Position
                </td>
                <td>
                    @GetPilotName(position.PilotId)
                </td>
                <td>
                    @($"{TimeSpan.FromMilliseconds(position.TotalMilliseconds):m\\:ss\\:fff}")
                </td>
            </tr>
        }
    </tbody>
</table>