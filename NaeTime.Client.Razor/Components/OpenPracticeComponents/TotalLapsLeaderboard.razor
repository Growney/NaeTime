<h5 class="w-100 text-center">Total Laps</h5>
<div style="width:300px;">
    <table class="table table-striped">
        <tr>
            <th>
                #
            </th>
            <th>
                Pilot
            </th>
            <th>
                Laps
            </th>
        </tr>
        <tbody>
            @foreach (var position in _positions.OrderBy(x => x.Position))
            {
                <tr>
                    <td>
                        @position.Position
                    </td>
                    <td>
                        @GetPilotName(position.PilotId)
                    </td>
                    <td>
                        @position.TotalLaps
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
