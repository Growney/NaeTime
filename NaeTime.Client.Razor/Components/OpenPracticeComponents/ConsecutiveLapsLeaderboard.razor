<h5 class="w-100 text-center">@Leaderboard.ConsecutiveLaps Consecutive Laps</h5>
<table class="table table-striped">
    <tr>
        <th>
            #
        </th>
        <th>
            Pilot
        </th>
        <th>
            Laps
        </th>
        <th class="text-center">
            Time
        </th>
    </tr>
    <tbody>
        @foreach (var position in Leaderboard.Positions.OrderBy(x => x.Position))
        {

            <tr>
                <td>
                    @position.Position
                </td>
                <td>
                    @position.PilotName
                </td>
                <td>
                    @position.TotalLaps
                </td>
                <td>
                    @($"{TimeSpan.FromMilliseconds(position.TotalMilliseconds):m\\:ss\\:fff}")
                    
                </td>
            </tr>
        }
    </tbody>
    
    
   
</table>