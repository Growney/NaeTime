
<div class="container">
    <div class="row mt-2">
        <div class="col-6">
            <div class="form-floating">
                <input class="form-control from-text" type="text" @bind-value="Dto.Identifier" />
                <label class="form-label">Identifier</label>
            </div>
        </div>
         <div class="col-5">
              <div class="form-switch">
                <input class="form-check-input" type="checkbox" @bind="Dto.UseAnalogToDigitalConverter" />
                <label class="form-label">Use SPI analog to digital converter</label>
            </div>
        </div>
         <div class="col-1 ">
             <span @onclick="() => OnRemove?.Invoke(Dto)">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                      <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                  </svg>
             </span>
            
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-3">
            <div class="form-floating">
                <input class="form-control" type="number" max="255" min="0" @bind-value="Dto.RSSIPin" />
                <label class="form-label">RSSI Pin</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-floating">
                <input class="form-control" type="number" max="255" min="0" @bind-value="Dto.DataPin" />
                <label>Data Pin</label>
            </div>
        </div>
        <div class="col-3">
             <div class="form-floating">
                <input class="form-control" type="number" max="255" min="0" @bind-value="Dto.SelectPin" />
                <label>Select Pin</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-floating">
                <input class="form-control" type="number" max="255" min="0" @bind-value="Dto.ClockPin" />
                <label>Clock Pin</label>
            </div> 
        </div>
    </div>
</div>
       
