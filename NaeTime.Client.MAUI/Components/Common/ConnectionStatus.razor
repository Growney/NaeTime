@using NaeTime.Client.MAUI.Lib;
@if (Status == ConnectionState.Success)
{
    <i class="text-success fa-solid fa-check"></i>
}
else if (Status == ConnectionState.Connecting)
{
    <i class="text-primary fa-solid fa-spinner fa-spin"></i>
}
else if (Status == ConnectionState.Disabled)
{
    <i class="text-muted fa-regular fa-circle-xmark"></i>
}
else if (Status == ConnectionState.ConnectionFailed)
{
    <i class="text-danger fa-solid fa-exclamation"></i>
}
@code {
    [Parameter]
    public ConnectionState Status { get; set; } = ConnectionState.Connecting;
}
